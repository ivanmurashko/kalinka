SQL_FILES = dvb-streamer.sql testdvbstreamer.sql \
  create_dvb_t_streamer_test_data.sql create_dvb_s_streamer_test_data.sql 

EXTRA_DIST = dvb-streamer.sql.in \
 testdvbstreamer.sql.in \
 create_dvb_t_streamer_test_data.sql.in \
 create_dvb_s_streamer_test_data.sql.in \
 $(SQL_FILES)

install-data-local: $(SQL_FILES)
	$(mkinstalldirs) $(sharedir)/sql
	@for file in $(SQL_FILES); do \
		echo " $(INSTALL_DATA) $$file $(sharedir)/sql"; \
		$(INSTALL_DATA) $$file $(sharedir)/sql; \
	done

uninstall-local:         
	@for file in $(SQL_FILES); do \
		echo "rm -rf $(sharedir)/sql/$$file"; \
		rm -rf $(sharedir)/sql/$$file; \
	done
	rm -rf $(sharedir)/sql

