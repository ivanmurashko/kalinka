#ifndef KLK_NETDEV_H
#define KLK_NETDEV_H

#include "ifactory.h"
#include "common.h"
#include "basedev.h"

/** @defgroup grNetResources Network resources types
    @{

    Hardware info

    @ingroup grResources
*/

namespace klk
{
    namespace dev
    {
        /**
           Network resources id
        */
        const std::string NET = "@RESOURCE_TYPE_NETWORK_INTERFACE@";

        /**
           Network address dev's parameter key
        */
        const std::string NETADDR = "network_address";

        /**
           Network mask dev's parameter key
        */
        const std::string NETMASK = "network_mask";

        /**
           Network address UUID dev's parameter key (gotten from DB)
        */
        const std::string NETADDRUUID = "network_address_uuid";

        /**
           Network multicast property
        */
        const std::string NETMCAST = "network_mcast";

        /**
           Loopback network
        */
        const std::string NETLOOP = "network_loop";

        /**
           @brief Network resource

           Net device info holder
        */
        class Net : public Base
        {
        public:
            /**
               Constructor

               @param[in] factory - the factory
            */
            explicit Net(IFactory* factory);

            /**
               Destructor
            */
            virtual ~Net(){}
        private:
            /**
               @copydoc IDev::update()
            */
            virtual void update();

            /**
               @copydoc IDev::updateDB()
            */
            virtual void updateDB();

            /**
               @copydoc IDev::equal_to()

               @note we get equalence by the dev's name
            */
            virtual bool equal_to(const IDevPtr& dev) const;

            /**
               Retrives PCI bus uuid

               @note FIXME!!! remove it
            */
            const std::string getBusUUID();
        private:
            /**
               Copy constructor
               @param[in] value - the copy param
            */
            Net(const Net& value);

            /**
               Assigment operator
               @param[in] value - the copy param
            */
            Net& operator=(const Net& value);
        };
    }
}

/** @} */

#endif //KLK_NETDEV_H
